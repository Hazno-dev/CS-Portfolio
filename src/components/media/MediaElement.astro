---
import type { HTMLAttributes } from 'astro/types';
import { Media } from '@components/media/data/Media.ts';

interface Props extends HTMLAttributes<'image'> {
	Source: Media | null;
}

const { Source, ...attrs } = {
	...Astro.props
};

if (!Source) {
	return;
}

const data = await Source.GetHtml(attrs);
---

<Fragment set:html={data} />
