---
import type { CollectionEntry } from 'astro:content';
import Text from '../text/Text.astro';
import { Icon } from 'astro-icon/components';
import IconButton from '@components/core/image/IconButton.astro';
import HorizontalRow from '@layouts/structure/horizontal-row.astro';
import IconCollection from '@components/core/image/IconCollection.astro';
import Spacer from '@components/core/Spacer.astro';
import ProjectLanguages from '@components/project/project-languages.astro';
interface Props {
	project: CollectionEntry<'project'>;
	class?: string;
}

const { project } = {
	project: Astro.props.project
};

const tools = project.data.projectInfo.tools;
const languages = project.data.projectInfo.languages;
const hasLanguages = languages && languages.length > 0;
---

<HorizontalRow gap="3" class=`pl-[1px] mb-[0.8px] ${Astro.props.class}`>
	<IconCollection icons={tools} size="20" />
</HorizontalRow>
