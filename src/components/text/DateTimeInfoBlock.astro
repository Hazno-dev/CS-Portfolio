---
import Text from '@components/text/Text.astro';
import DateTimeBlock from '@components/text/DateTimeBlock.astro';
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'p'> {
	heading: string;
	description: string;
	start: Date;
	end?: Date | null;
	type?: `heading` | `subheading` | `paragraph` | `mono` | `mono-light` | `label` | `sublabel` | `tag` | `tag-heading`;
}

const { heading, description, start, end, ...attrs } = Astro.props;
---

<li {...attrs} class=`flex flex-row gap-4 min-w-[100%] ${attrs.class ?? ''}`>
	<div class="flex-grow basis-[70%] flex-col sm:basis-auto lg:basis-1/3">
		<Text type="tag-heading" class="!mt-0 uppercase">
			{heading}<br /><span class="text-paragraph-sm capitalize">{description}</span>
		</Text>
	</div>
	<Text type="tag" class="!mt-1 flex-shrink basis-[30%] sm:basis-auto lg:basis-[40%]"
		><DateTimeBlock start={start} end={end} /></Text
	>
</li>
