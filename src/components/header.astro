---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);

const links = [
	{ name: 'Portfolio', path: '' },
	{ name: 'Resume', path: 'resume' }
];

const isCurrentPath = (path: string) => {
	return currentPath === path;
};
---

<header
	class="border-b-secondary-1000/10 bg-primary-100 sticky top-0 z-10 block
		border-b-[0.8px] pt-2.5 pb-1">
	<div class="flex flex-row items-center">
		<div class="flex grow flex-col">
			<h1 class="text-secondary-900 -mb-1.5 inline-block text-base font-medium">
				Callum Anthony Stables
			</h1>
			<p class="text-secondary-700 inline-block text-sm">Technical Designer</p>
		</div>
		<nav>
			{
				links.map((link) => (
					<a
						href={`/${link.path}`}
						class={`button-base ${isCurrentPath(link.path) ? 'button-base-target' : ''}`}>
						{link.name}
					</a>
				))
			}
		</nav>
		<button>Theme</button>
	</div>
</header>
