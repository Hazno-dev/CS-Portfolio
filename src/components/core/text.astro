---
import type { HTMLAttributes } from 'astro/types';
export interface Props extends HTMLAttributes<'p'> {
	type: `heading` | `subheading` | 'tag' | `paragraph` | `mono` | 'mono-light';
}

const { type, ...attrs } = Astro.props;
---

{
	type === `heading` && (
		<h2
			class={`text-secondary-1000 mb-1 text-3xl font-black uppercase drop-shadow-sm
				xl:text-4xl`}
			class:list={attrs.class ?? undefined}
			{...attrs}>
			<slot />
		</h2>
	)
}

{
	type === `subheading` && (
		<h3
			class="text-secondary-1000 text-sm font-bold"
			class:list={attrs.class ?? undefined}
			{...attrs}>
			<slot />
		</h3>
	)
}

{
	type === `paragraph` && (
		<p
			class="text-secondary-900 mb-2 text-sm md:text-base/5"
			class:list={attrs.class ?? undefined}
			{...attrs}>
			<slot />
		</p>
	)
}

{
	type === `mono` && (
		<p class="text-tag" class:list={attrs.class ?? undefined} {...attrs}>
			<slot />
		</p>
	)
}

{
	type === `mono-light` && (
		<p
			class="text-tag text-secondary-800"
			class:list={attrs.class ?? undefined}
			{...attrs}>
			<slot />
		</p>
	)
}

{
	type === `tag` && (
		<p
			class="text-xs font-medium"
			class:list={attrs.class ?? undefined}
			{...attrs}>
			<slot />
		</p>
	)
}
